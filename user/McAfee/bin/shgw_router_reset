. /etc/shgw/shgw.constants

#This script is called after SHGW stop is performed from code
#Do not change this implementation

delete_database() {
${RM} -f ${SHGW_PERSISTANT_DB}
${RM} -f ${SHGW_NON_PERSISTANT_DB}
${RM} -f ${SHGW_LOG_FILE}
${RM} -rf ${SHGW_TMPFS_PATH}
${KILL} -9 $(${PS} | ${GREP} crond | ${GREP} -v "grep" | ${AWK} '{print $1}') 2>/dev/null
${SED} -i '/shgw_wd_monit/d' ${CRONTAB_FILE}
${SED} -i '/shgw_update/d' ${CRONTAB_FILE}
${CROND}
}

#Main

delete_database
